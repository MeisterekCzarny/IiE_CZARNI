<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.silowniaprojekt.LoginController" spacing="10" alignment="CENTER" stylesheets="@login_styles.css">
    <Label text="Logowanie do systemu" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
    <VBox spacing="5" style="-fx-padding: 20;">
        <Label text="Email:"/>
        <TextField fx:id="emailField" promptText="Wprowadź email"/>
        <Label text="Hasło:"/>
        <PasswordField fx:id="passwordField" promptText="Wprowadź hasło"/>
        <Button fx:id="loginButton" text="Zaloguj" onAction="#handleLogin" style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15;"/>
    </VBox>
</VBox>