<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.silowniaprojekt.LoginController"
           stylesheets="@login_styles.css">

    <!-- TÅ‚o jako background CSS - nie przez ImageView -->

    <!-- Panel logowania -->
    <VBox spacing="20" alignment="CENTER" styleClass="login-panel">

        <Label text="BLACK IRON" styleClass="title-label"/>

        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="emailField" promptText="Username" styleClass="input-field"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>

            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="login-button"/>
        </VBox>



        <HBox spacing="15" alignment="CENTER">
            <ImageView fitWidth="35" fitHeight="35">
                <image><Image url="@images/instagram.png"/></image>
            </ImageView>
            <ImageView fitWidth="35" fitHeight="35">
                <image><Image url="@images/facebook.png"/></image>
            </ImageView>
            <ImageView fitWidth="35" fitHeight="35">
                <image><Image url="@images/apple.png"/></image>
            </ImageView>
        </HBox>

    </VBox>
</StackPane>
