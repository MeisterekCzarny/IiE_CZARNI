<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.silowniaprojekt.DashboardController" spacing="10" style="-fx-padding: 20;">
    <Label fx:id="welcomeLabel" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Panel administratora -->
    <VBox fx:id="adminPanel" spacing="10" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 5;">
        <Label text="Panel administratora" style="-fx-font-weight: bold;"/>
        <Label text="Tutaj będą funkcje administracyjne"/>
        <Button text="Zarządzaj użytkownikami"/>
        <Button text="Generuj raporty"/>
    </VBox>

    <!-- Panel trenera -->
    <VBox fx:id="trainerPanel" spacing="10" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 5;">
        <Label text="Panel trenera" style="-fx-font-weight: bold;"/>
        <Label text="Tutaj będą funkcje dla trenera"/>
        <Button text="Planuj treningi"/>
        <Button text="Przeglądaj postępy klientów"/>
    </VBox>

    <!-- Panel pracownika -->
    <VBox fx:id="employeePanel" spacing="10" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 5;">
        <Label text="Panel pracownika" style="-fx-font-weight: bold;"/>
        <Label text="Tutaj będą funkcje dla pracownika"/>
        <Button text="Rejestruj transakcje"/>
        <Button text="Zarządzaj członkostwami"/>
    </VBox>

    <!-- Panel klienta -->
    <VBox fx:id="clientPanel" spacing="10" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 5;">
        <Label text="Panel klienta" style="-fx-font-weight: bold;"/>
        <Label text="Tutaj będą funkcje dla klienta"/>
        <Button text="Umów się na trening"/>
        <Button text="Sprawdź harmonogram"/>
    </VBox>
</VBox>